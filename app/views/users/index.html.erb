<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          <% if current_user && current_user.id != user.id && !check_friendship_relation(user) %>
            <%= link_to 'Invite to Friendship', add_as_a_friend_path(user.id), class: 'profile-link' %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
